<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SP_Activity">


    <TextView

        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="101dp"
        android:text="Android Book Name: "
        android:textSize="18sp" />


    <TextView

        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_alignLeft="@+id/t1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="159dp"
        android:text="Android Book Author: "
        android:textSize="18sp" />


    <TextView

        android:id="@+id/t3"
        android:layout_width="142dp"
        android:layout_height="41dp"
        android:layout_alignLeft="@+id/t1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="226dp"
        android:text="Description: "
        android:textSize="18sp" />


    <EditText
        android:id="@+id/e1"
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:layout_alignTop="@+id/t1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray"
        android:hint="Max. 70 Characters"
        android:textColor="@color/black"
        android:textColorHint="@color/darkGray" />


    <EditText
        android:id="@+id/e2"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignTop="@+id/t2"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="3dp"
        android:background="@color/gray"
        android:hint="Max. 70 Characters"
        android:textColor="@color/black"
        android:textColorHint="@color/darkGray" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="181dp"
        android:layout_height="161dp"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignTop="@+id/t2"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="68dp"
        android:background="@color/gray"
        android:gravity="top"
        android:hint="Maximum 255 Characters Only"
        android:textColor="@color/black"
        android:textColorHint="@color/darkGray" />


    <Button
        android:id="@+id/b1"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/t2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="81dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="serif" />


    <Button
        android:id="@+id/b2"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignTop="@+id/b1"
        android:background="@color/colorPrimary"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="serif" />


    <ImageView
        android:layout_width="97dp"
        android:layout_height="69dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/sjsu" />

    <TextView
        android:id="@+id/tx1"
        android:layout_width="203dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="Preference View"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="serif" />

</RelativeLayout>