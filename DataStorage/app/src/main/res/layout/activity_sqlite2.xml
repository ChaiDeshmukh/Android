<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SQLiteActivity">


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/e1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Blog Message: "
        android:textSize="18sp" />


    <EditText
        android:id="@+id/e1"
        android:layout_width="226dp"
        android:layout_height="196dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/gray"
        android:gravity="top"
        android:hint="Maximum 255 Characters Only"
        android:textColor="@color/black"
        android:textColorHint="@color/darkGray" />


    <Button
        android:id="@+id/button1"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/t1"
        android:layout_alignTop="@+id/button2"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="serif" />


    <ImageView
        android:layout_width="97dp"
        android:layout_height="69dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/sjsu" />

    <TextView
        android:id="@+id/tx1"
        android:layout_width="203dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:text="SQLite View"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="serif" />


    <Button
        android:id="@+id/button2"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="111dp"
        android:background="@color/colorPrimary"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:typeface="serif" />


</RelativeLayout>