<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/t1"
        android:layout_width="138dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="13dp"
        android:text="Temperature: "
        android:textColor="@color/Orange"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/e1"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/t1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:background="@color/gray"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/t2"
        android:layout_width="138dp"
        android:layout_height="34dp"
        android:layout_alignLeft="@+id/t1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="62dp"
        android:text="Humidity: "
        android:textColor="@color/Orange"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/t3"
        android:layout_width="138dp"
        android:layout_height="34dp"
        android:layout_alignLeft="@+id/t1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="111dp"
        android:text="Activity: "
        android:textColor="@color/Orange"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/e2"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignBottom="@+id/t3"
        android:background="@color/gray"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/e3"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignBottom="@+id/t2"
        android:background="@color/gray"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/t4"
        android:layout_width="147dp"
        android:layout_height="48dp"

        android:layout_alignRight="@+id/t3"
        android:layout_alignParentTop="true"
        android:layout_marginTop="164dp"
        android:layout_marginRight="-6dp"
        android:text="Number of Sensor Reading: "
        android:textColor="@color/Orange"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/e4"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/e1"
        android:layout_alignTop="@+id/t4"
        android:background="@color/gray"
        android:inputType="text"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>


    <Button
        android:id="@+id/b1"
        android:layout_width="124dp"
        android:layout_height="33dp"
        android:layout_below="@+id/t4"
        android:layout_alignLeft="@+id/t4"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="11dp"
        android:background="@color/Orange"
        android:text="Generate"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />


    <Button
        android:id="@+id/b2"
        android:layout_width="124dp"
        android:layout_height="33dp"
        android:layout_below="@+id/t4"
        android:layout_alignLeft="@+id/e1"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="12dp"
        android:background="@color/Orange"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/t5"
        android:layout_width="138dp"
        android:layout_height="34dp"
        android:layout_alignLeft="@+id/t4"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginBottom="219dp"
        android:text="Output: "
        android:textColor="@color/Orange"
        android:textSize="18sp" />


    <ProgressBar
        android:id="@+id/bar"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:visibility="invisible"
        tools:visibility="visible" />


    <TextView
        android:id="@+id/outputScreen"
        android:layout_width="357dp"
        android:layout_height="214dp"
        android:layout_alignLeft="@+id/t5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:background="@color/gray"
        android:fadeScrollbars="true"
        android:fadingEdge="vertical"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>